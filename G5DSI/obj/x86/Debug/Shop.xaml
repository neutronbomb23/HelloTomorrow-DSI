<Page
    x:Class="G5DSI.Shop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:G5DSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="SHOP">
            <PivotItem Header="ELECTRICITY">
                <StackPanel x:ConnectionId='2' x:Name="MiStack" Grid.Column="0" Orientation="Horizontal" Padding="5" Background="LightBlue">
                    <StackPanel Orientation="Vertical" Margin="10" CanDrag="True">
                        <TextBlock Text="Generador Electrico" FontSize="32" HorizontalAlignment="Center"/>
                        <Image Source="/Assets/Square150x150Logo.scale-200.png" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10" CanDrag="True">
                        <TextBlock Text="Generador++" FontSize="32" HorizontalAlignment="Center"/>
                        <Image Source="/Assets/Square150x150Logo.scale-200.png" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10" CanDrag="True">
                        <TextBlock Text="Repetidor" FontSize="32" HorizontalAlignment="Center"/>
                        <Image Source="/Assets/Square150x150Logo.scale-200.png" />
                    </StackPanel>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="WATER">
                <TextBlock Text="WAT" />
            </PivotItem>
            <PivotItem Header="MINERAL">
                <TextBlock Text="MIN" />
            </PivotItem>
            <PivotItem Header="MILITAR">
                <TextBlock Text="MIL" />
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

